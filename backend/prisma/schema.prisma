generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Retailer {
  id        String   @id @default(uuid())
  name      String   @unique
  apiUrl    String?
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  productListings ProductListing[]

  @@map("retailers")
}

model Product {
  id          String   @id @default(uuid())
  externalId  String // ID from external API
  title       String
  description String?
  category    String?
  imageUrl    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  listings ProductListing[]
  alerts   PriceAlert[]

  @@unique([externalId])
  @@index([category, title])
  @@map("products")
}

model ProductListing {
  id           String   @id @default(uuid())
  productId    String
  retailerId   String
  currentPrice Decimal  @db.Decimal(10, 2)
  url          String?
  isActive     Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  product      Product        @relation(fields: [productId], references: [id], onDelete: Cascade)
  retailer     Retailer       @relation(fields: [retailerId], references: [id], onDelete: Cascade)
  priceHistory PriceHistory[]

  @@unique([productId, retailerId])
  @@index([productId])
  @@index([retailerId])
  @@map("product_listings")
}

model PriceHistory {
  id        String   @id @default(uuid())
  listingId String
  price     Decimal  @db.Decimal(10, 2)
  currency  String   @default("USD")
  timestamp DateTime @default(now())

  listing ProductListing @relation(fields: [listingId], references: [id], onDelete: Cascade)

  @@index([listingId, timestamp])
  @@index([timestamp])
  @@map("price_history")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  alerts        PriceAlert[]
  notifications Notification[]
  savedSearches SavedSearch[]

  @@map("users")
}

model PriceAlert {
  id                  String    @id @default(uuid())
  userId              String
  productId           String
  targetPrice         Decimal?  @db.Decimal(10, 2)
  percentageThreshold Decimal?  @db.Decimal(5, 2) // e.g., 10.00 for 10% drop
  isActive            Boolean   @default(true)
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt
  lastNotifiedPrice   Decimal?  @db.Decimal(10, 2)
  lastNotifiedAt      DateTime?

  user          User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  product       Product        @relation(fields: [productId], references: [id], onDelete: Cascade)
  notifications Notification[]

  @@index([userId])
  @@index([productId])
  @@index([isActive])
  @@map("price_alerts")
}

model Notification {
  id        String   @id @default(uuid())
  userId    String
  alertId   String?
  type      String // 'PRICE_DROP', 'TARGET_REACHED', 'SALE_STARTED'
  title     String
  message   String
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())

  user  User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  alert PriceAlert? @relation(fields: [alertId], references: [id], onDelete: SetNull)

  @@index([userId, isRead])
  @@index([createdAt])
  @@map("notifications")
}

model SavedSearch {
  id        String   @id @default(uuid())
  userId    String
  name      String
  filters   Json // Store filter criteria as JSON
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("saved_searches")
}

model IngestionLog {
  id               String    @id @default(uuid())
  source           String // 'FAKE_STORE_API', 'AMAZON_API'
  status           String // 'SUCCESS', 'FAILED', 'PARTIAL'
  productsIngested Int       @default(0)
  errors           Json?
  startedAt        DateTime  @default(now())
  completedAt      DateTime?

  @@index([source, startedAt])
  @@map("ingestion_logs")
}
